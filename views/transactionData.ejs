
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="home.css">

    <title>Transaction Data</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1 class="myEmployees"><a href="/homeadmin">Halodek</a></h1>
    </div>
    
    <h2 class="link">Transaction Data</h2>

    <div class="addSortFilter">
        <div class="filter"> 
            <form action="/transaction-data" method="get">
                <input type="text" name="searchProduct" placeholder="Search">
                <button type="submit">Search</button>
            </form>
        </div>
    </div>
    <br>
    <br>
 

    <table>
        <thead>
            <tr>
                <th>Transaction Status</th>
                <th>Date</th>
                <th>User Name</th>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach((transaction) => { %>
                <tr>
                    <td><%= transaction.status %></td>
                    <td><%= transaction.formattedDate %></td>
                    <% if (transaction.User && transaction.User.username) { %>
                        <td><%= transaction.User.username %></td>
                    <% } else { %>
                        <td colspan="3">User Data Not Available</td>
                    <% } %>
                    <% if (transaction.Product) { %>
                        <td><%= transaction.Product.productName %></td>
                        <td><%= formatRupiah(transaction.Product.price) %></td>
                    <% } else { %>
                        <td colspan="2">Product Data Not Available</td>
                    <% } %>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
