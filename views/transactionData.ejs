<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Data</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <a href="/homeadmin">Halodek</a>

    <ul>
        <li>
            <a href="/homeadmin">All Products</a>
        </li>
        <li>
            <a href="/logout" style="color: green;">Logout</a>
        </li>
    </ul>
    <h1>Transaction Data</h1>
    <form action="/transaction-data" method="get">
        <input type="text" name="searchProduct" placeholder="Search">
        <button type="submit">Search</button>
    </form>
    <br>
    <table>
        <thead>
            <tr>
                <th>Transaction Status</th>
                <th>Date</th>
                <th>User Name</th>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach((transaction) => { %>
                <tr>
                    <td><%= transaction.status %></td>
                    <td><%= transaction.formattedDate %></td>
                    <% if (transaction.User && transaction.User.username) { %>
                        <td><%= transaction.User.username %></td>
                    <% } else { %>
                        <td colspan="3">User Data Not Available</td>
                    <% } %>
                    <% if (transaction.Product) { %>
                        <td><%= transaction.Product.productName %></td>
                        <td><%= formatRupiah(transaction.Product.price) %></td>
                    <% } else { %>
                        <td colspan="2">Product Data Not Available</td>
                    <% } %>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
